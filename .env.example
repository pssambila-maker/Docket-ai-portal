# Database Configuration
POSTGRES_USER=aiportal
POSTGRES_PASSWORD=change_me
POSTGRES_DB=aiportal
DATABASE_URL=postgresql+psycopg://aiportal:change_me@db:5432/aiportal

# JWT Configuration
JWT_SECRET=change_me_to_long_random_string_at_least_32_characters
JWT_EXPIRE_MINUTES=120

# LLM Provider Configuration
# Available providers: openai, anthropic, google, groq, openrouter, ollama
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI Configuration (for Gemini models)
GOOGLE_API_KEY=your_google_api_key_here

# Groq Configuration (fast inference)
GROQ_API_KEY=your_groq_api_key_here

# OpenRouter Configuration (access multiple models)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Ollama Configuration (local models - runs in Docker)
# OLLAMA_BASE_URL is set automatically to http://ollama:11434 in docker-compose

# Optional: Azure OpenAI (uncomment if using Azure)
# LLM_PROVIDER=azure_openai
# AZURE_OPENAI_API_KEY=your_azure_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT=your-deployment-name
# AZURE_OPENAI_API_VERSION=2024-02-15-preview
